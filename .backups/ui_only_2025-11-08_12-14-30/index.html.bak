<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>SMS Procurement Manager</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    :root{--bg:#0f172a;--card:#111827;--bd:#374151;--fg:#e5e7eb;--mut:#9ca3af;--ok:#10b981;--warn:#f59e0b;--err:#ef4444}
    *{box-sizing:border-box} body{margin:0;background:var(--bg);color:var(--fg);font-family:system-ui,Segoe UI,Roboto,Arial,sans-serif}
    header{padding:12px 16px;border-bottom:1px solid var(--bd);display:flex;gap:12px;align-items:center}
    header h1{font-size:16px;margin:0;flex:1}
    nav button{margin-right:8px}
    .wrap{max-width:980px;margin:24px auto;padding:0 16px}
    .card{background:var(--card);border:1px solid var(--bd);border-radius:12px;padding:16px}
    h2{margin:0 0 12px}
    label{display:block;margin:10px 0 6px;color:var(--mut);font-size:13px}
    input,textarea{width:100%;padding:8px 10px;border-radius:8px;border:1px solid var(--bd);background:#0b1220;color:var(--fg)}
    .row{display:grid;grid-template-columns:repeat(2,1fr);gap:12px}
    .actions{margin-top:14px}
    button{padding:8px 12px;border:1px solid var(--bd);background:#0b1220;color:var(--fg);border-radius:10px;cursor:pointer}
    button.primary{background:var(--ok);border-color:#065f46;color:#062a22}
    .muted{color:var(--mut)}
    pre{white-space:pre-wrap;background:#0b1220;border:1px solid var(--bd);padding:12px;border-radius:10px}
    .error{color:var(--err)} .ok{color:var(--ok)}
  </style>
</head>
<body>
  <header>
    <h1>SMS Procurement Manager</h1>
    <nav id="nav" hidden>
      <button data-view="dashboard">Dashboard</button>
      <button data-view="offers">Offers</button>
      <button data-view="settings">Settings</button>
      <button id="logout">Logout</button>
    </nav>
  </header>
  <div class="wrap"><div id="root" class="card"></div></div>
  <script src="main.js"></script>
</body>
</html>
